<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".CadastroProjetoActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Projeto:"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/edtNomeProjeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Inicio:"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/edtDataInicio"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="number"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:text="30/04/2019"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Fim:"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/edtDataFIm"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="number"
            android:background="@drawable/border"
            android:textColor="@color/white"
            android:text="30/04/2019"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

        <Button
            android:id="@+id/btnEnviarProjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:backgroundTint="@color/black"
            />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

